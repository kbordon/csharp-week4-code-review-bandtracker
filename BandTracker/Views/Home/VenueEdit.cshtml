@{
    Layout = "_Layout";
}
<h2>EDIT @Model.GetName() DETAILS</h2>
<form action="/venues/@Model.GetId()/edit" method="post">
    <div class="form-group">
        <label for="new-name">NAME:</label>
        <input type=text class="form-control" name="new-name" id="new-name" required autofocus value="@Model.GetName()" placeholder="Lamb's Square">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">EDIT</button>
    </div>
</form>
<p><a href='/venues/@Model.GetId()'>GO BACK WITHOUT CHANGES</a></p>
