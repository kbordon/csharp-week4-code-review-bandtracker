@{
    Layout = "_Layout";
}
<h1 class="top-index">VENUES</h1>
  <div class="container-custom">
    <div class="top-spacer link-custom">
    @if (Model.Count != 0)
    {
      <ul class="list-unstyled">
        @foreach (var venue in Model)
        {
          <li class="link-list-size link-list-venue"><a href='/venues/@venue.GetId()'>@venue.GetName()</a></li>
        }
      </ul>
    }
    else
    {
        <div class="alert alert-warning">
          <h4><em>There are no venues entered yet.</em></h4>
        </div>
    }

    <ul>
      <li class="venue-link"><a href="/venues/new">ADD A VENUE</a></li>
      <li><a href="/">HOME</a></li>
    </ul>
  </div>
</div>
