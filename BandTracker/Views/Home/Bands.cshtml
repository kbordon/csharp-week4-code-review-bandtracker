<h1>BANDS</h1>
<hr />
<h2>Tasks:</h2>
@if (Model.Count != 0)
{
  <ul class="list-unstyled">
    @foreach (var band in Model)
    {
      <li><a href='/bands/@band.GetId()'>@band.GetName()</a></li>
    }
  </ul>
}
else
{
    <div class="alert alert-warning">
      <h4><em>There are no bands entered yet.</em></h4>
    </div>
}

<ul class="list-inline">
  <li><a class="other-link" href="/bands/new">ADD A BAND</a></li>
  <li><a class="other-link" href="/">HOME</a></li>
</ul>
