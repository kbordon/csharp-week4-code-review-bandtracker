@{
    Layout = "_Layout";
}
<h1 class="top-index">BANDS</h1>
<div class="container-custom">
  <div class="top-spacer link-custom">
    @if (Model["allBands"].Count != 0)
    {
        <h4><a href='/bands/@Model["random"].GetId()'>Discover a new band</a></h4>
        <p class="white-text">Or select a band from the list below:</p>
      <ul class="list-unstyled">
        @foreach (var band in Model["allBands"])
        {
          <li><a href='/bands/@band.GetId()'>@band.GetName()</a></li>
        }
      </ul>

    }
    else
    {
        <div class="alert alert-warning">
          <h4><em>There are no bands entered yet.</em></h4>
        </div>
    }

    <ul class="list-inline link-other">
      <li><a href="/bands/new">ADD A BAND</a></li>
      <li><a href="/">HOME</a></li>
    </ul>
  </div>
</div>
